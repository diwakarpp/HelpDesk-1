@model HelpDesk.Domain.Core.Categories.Category

@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Admin/_Layout.cshtml";
}

<hr />
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title"> گروه جدید</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->

                <form asp-action="AddCategory" asp-controller="Admin">
                    <div asp-validation-summary="All"></div>
                    <div class="box-body">

                        <div class="form-group">
                            <label asp-for="Name" class="control-label">نام گروه</label>
                            <input asp-for="Name" class="form-control input-lg" maxlength="100"/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label">توضیحات</label>
                            <textarea asp-for="Description" class="form-control tex" maxlength="200" rows="5"></textarea>

                        </div>
                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <input type="submit" value="افزودن" class="btn btn-block btn-success btn-lg" />
                    </div>
                </form>
            </div>
            </div>
        </div>
    </section>

