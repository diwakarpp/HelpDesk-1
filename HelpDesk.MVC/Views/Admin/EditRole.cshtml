@model HelpDesk.MVC.Models.Users.ApplicaionRoles

@{
    ViewData["Title"] = "EditRole";
    Layout = "~/Views/Admin/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        <small>ویرایش نقش @Model.Name</small>
    </h1>
    <ol class="breadcrumb">
        <li><a asp-action="Index" asp-controller="Admin"><i class="fa fa-dashboard"></i> داشبورد</a></li>
        <li class="active">ویرایش نقش</li>
    </ol>
</section>
<section class="content">

    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title"> ویرایش نقش</h3>
                </div>

                <form asp-action="EditRole" method="post">
                    <div class="box-body">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label">نام نقش</label>
                            <input asp-for="Name" class="form-control input-lg" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="Id" />
                        <div class="box-footer">
                            <input type="submit" value="ویرایش" class="btn btn-block btn-success btn-lg" />
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>

    <div>
        <a class="btn btn-info" asp-action="Roles">بازگشت به لیست</a>
    </div>
</section>

