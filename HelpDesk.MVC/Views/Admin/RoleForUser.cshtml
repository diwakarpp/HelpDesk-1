@model HelpDesk.MVC.Models.Users.UserRoleViewModel
@{
    ViewData["Title"] = "RoleForUser";
    Layout = "~/Views/Admin/_Layout.cshtml";
}

<link href="~/css/select2.min.css" rel="stylesheet" />

<section class="content-header">
    <h1>
        <small>اختصاص نقش به کاربر</small>
    </h1>
    <ol class="breadcrumb">
        <li><a asp-action="Index" asp-controller="Admin"><i class="fa fa-dashboard"></i> داشبورد</a></li>
        <li class="active">اختصاص نقش به کاربر</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">اختصاص نقش به @Model.User.FirstName  @Model.User.LastName  </h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->

                <form asp-action="RoleForUser" method="post" asp-controller="Admin">

                    <div class="box-body">

                        <div class="form-group">
                            شماره استخدامی
                            <label class="control-label">@Model.User.UserName</label>
                            <input type="text" asp-for="User.UserName" hidden />
                        </div>
                        <div class="form-group">
                            نام و نام خانوادگی:
                            <label class="control-label">@Model.User.FirstName  @Model.User.LastName</label>
                        </div>
                        <div class="form-group">
                            <select class="form-control select2" name="Roles" multiple>
                                @foreach (var item in Model.ApplicaionRoles)
                                {
                                    <option value="@item.Name">@item.Name</option>
                                }

                            </select>
                        </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <input type="submit" value="افزودن" class="btn btn-block btn-success btn-lg" />
                        </div>

                </form>

            </div>
        </div>
    </div>
    <div>
        <a class="btn btn-info" asp-action="userList">بازگشت به لیست</a>
    </div>

</section>
<script src="~/js/select2.min.js"></script>
<script>
    $(document).ready(function () {
        $('.select2').select2();
    });
</script>


